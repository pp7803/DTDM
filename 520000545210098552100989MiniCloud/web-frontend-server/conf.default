server {
  listen 80;
  server_name _;

  root /usr/share/nginx/html;
  index index.html;

  location / { try_files $uri $uri/ =404; }
  location ^~ /blog/ {
    alias /usr/share/nginx/html/blog/;
    index index.html;
    autoindex off;
  }

  # Stub status endpoint for Prometheus metrics
  location /stub_status {
    stub_status;
    allow 10.10.10.0/24;  # Only internal network
    deny all;
  }
}
